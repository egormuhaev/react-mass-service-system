{
    "extends": [
        "stylelint-config-standard",
        "stylelint-order-config-standard"
    ],
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "indentation": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "tab"
        ],
        "color-hex-case": "upper"
    }
}