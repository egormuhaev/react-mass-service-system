{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "react-app",
        "react-app/jest",
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "no-console": "warn", 
        "prefer-const": "error",  
        "quotes": ["warn", "single"], 
        "jsx-quotes": ["warn", "prefer-double"],
        "indent": ["warn", 2],  
        "max-len": ["warn", {"code": 220}],
        "comma-dangle": ["warn", "always-multiline"], 
        "semi": "warn"
    }
}